<%= link_to 'New Product', new_product_path %>
  <div class="row">
    <% @products.each do |product| %>

    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to product do %>
          <%= image_tag product.image, class: "img-responsive", alt: "Product Image" if product.image?  %>
        <% end %>
        <div class="caption">
          <h3><%= link_to product.name, product_path(product) %></h3>
          <p><%= product.description %></p>
          <div class="clearfix"><div class="price pull-left"><%= number_to_currency product.price %></div><a href="#" class="btn btn-success pull-right" role="button">Add to Cart</a></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

